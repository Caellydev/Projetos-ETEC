<?php
	
	$host = "localhost";
	$dbname = "livraria";
	$use = "root";
	$password = "";
	
		try {
			$pdo = new PDO("mysql:host = $host;dbname = $dbname",$user, $password);
			$pdo->setAttribute(PDO::ATTR_ERRMODE PDO::ERRMODE_EXCEPTION);
			echo "conexão realizada com sucesso";
		} catch (Exception $e){
			echo "Erro na conexão" . $e->getMessage();
		}
		
?>

$sql= "SELECT l.titulo, a.nome AS autor, e.nome AS editora FROM livros l JOIN autores a ON l.autor_id = a.id JOIN editora e ON l.editora_id = e.id;";
$result = $pdo -> query ($sql);

